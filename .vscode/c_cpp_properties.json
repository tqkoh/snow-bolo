{
    "configurations": [
        {
            "name": "Emscripten on Windows",
            "includePath": [
                "${workspaceFolder}/OpenSiv3D/include",
                "${workspaceFolder}/OpenSiv3D/include/Siv3D",
                "${workspaceFolder}/OpenSiv3D/include/ThirdParty",
                "${workspaceFolder}/OpenSiv3D/include/Siv3D/ThirdParty",
                "${workspaceFolder}/src"
            ],
            "compilerPath": "${env:EMSDK}/upstream/emscripten/emcc.bat",
            "cStandard": "c11",
            "cppStandard": "c++20",
            "intelliSenseMode": "clang-x86",
            "defines": [
                "__EMSCRIPTEN__"
            ],
            "forcedInclude": [
                "${workspaceFolder}/.vscode/Undefs.h"
            ]
        },
        {
            "name": "Emscripten on Linux",
            "includePath": [
                "${workspaceFolder}/OpenSiv3D/include",
                "${workspaceFolder}/OpenSiv3D/include/Siv3D",
                "${workspaceFolder}/OpenSiv3D/include/ThirdParty",
                "${workspaceFolder}/OpenSiv3D/include/Siv3D/ThirdParty",
                "${workspaceFolder}/src"
            ],
            "compilerPath": "${env:EMSDK}/upstream/emscripten/emcc",
            "cStandard": "c11",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-clang-x86",
            "defines": [
                "__EMSCRIPTEN__"
            ],
            "forcedInclude": [
                "${workspaceFolder}/.vscode/Undefs.h"
            ]
        }
    ],
    "version": 4
}
